# Allow destructuring assignments that look like password assignments
password: dbPassword
password: pwd
password: pass
password: pswd

# Allow common variable names that might trigger false positives
password.*=.*[a-zA-Z_][a-zA-Z0-9_]*$

# Allow MySQL setup code patterns
const.*password.*=.*body

# Allow node_modules patterns (these are external dependencies)
node_modules/.*password.*

# Allow HTML input patterns
input type="password"

# Allow bcrypt test patterns
bcrypt.*password.*test

# Allow URL state machine patterns
url.*password.*=

# Allow setup script patterns
SESSION_SECRET=your-session-secret-key

# Allow .env.example patterns
SESSION_SECRET=your-value-here
GOOGLE_CLIENT_ID=your-value-here
GOOGLE_CLIENT_SECRET=your-value-here